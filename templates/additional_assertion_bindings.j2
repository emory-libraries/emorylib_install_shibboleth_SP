{% set counter = {
    'artifact_counter': 2,
    'assertion_counter': 5,
} %}
{% macro increment(dct, key, inc=1)%}
    {% if dct.update({key: dct[key] + inc}) %} {% endif %}
{% endmacro %}
{% for fqdn in additional_assertion_bindings %}
    <md:ArtifactResolutionService Binding="urn:oasis:names:tc:SAML:2.0:bindings:SOAP" Location="https://fqdn/Shibboleth.sso/Artifact/SOAP" index="artifact_counter"/>{% increment(counter, 'artifact_counter' %}
    <md:SingleLogoutService Binding="urn:oasis:names:tc:SAML:2.0:bindings:SOAP" Location="https://fqdn/Shibboleth.sso/SLO/SOAP"/>
    <md:SingleLogoutService Binding="urn:oasis:names:tc:SAML:2.0:bindings:HTTP-Redirect" Location="https://fqdn/Shibboleth.sso/SLO/Redirect"/>
    <md:SingleLogoutService Binding="urn:oasis:names:tc:SAML:2.0:bindings:HTTP-POST" Location="https://fqdn/Shibboleth.sso/SLO/POST"/>
    <md:SingleLogoutService Binding="urn:oasis:names:tc:SAML:2.0:bindings:HTTP-Artifact" Location="https://fqdn/Shibboleth.sso/SLO/Artifact"/>
    <md:AssertionConsumerService Binding="urn:oasis:names:tc:SAML:2.0:bindings:HTTP-POST" Location="https://fqdn/Shibboleth.sso/SAML2/POST" index="assertion_counter"/> {% increment(counter, 'assertion_counter' %}
    <md:AssertionConsumerService Binding="urn:oasis:names:tc:SAML:2.0:bindings:HTTP-POST-SimpleSign" Location="https://fqdn/Shibboleth.sso/SAML2/POST-SimpleSign" index="assertion_counter"/>{% increment(counter, 'assertion_counter' %}
    <md:AssertionConsumerService Binding="urn:oasis:names:tc:SAML:2.0:bindings:HTTP-Artifact" Location="https://fqdn/Shibboleth.sso/SAML2/Artifact" index="assertion_counter"/>{% increment(counter, 'assertion_counter' %}
    <md:AssertionConsumerService Binding="urn:oasis:names:tc:SAML:2.0:bindings:PAOS" Location="https://fqdn/Shibboleth.sso/SAML2/ECP" index="assertion_counter"/>{% increment(counter, 'assertion_counter' %}
{% endfor %}
